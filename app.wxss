@import "icon.wxss";
@import "colorui.wxss";
.iconfont{font-size:inherit}
.icon-w:before{content:"\e71a";}
.icon-m:before{content:"\e71c";}
.red{color:red}
.width100{width:100% !important}
.nodata{margin:0 auto;padding:60rpx;text-align:center}
.txt-center{text-align:center}
.show{display: block}
.hide{display: none}
.pos-t-l{position:absolute;top:0;left:0}
.pos-t-r{position:absolute;top:0;right:0}
.pos-b-l{position:absolute;bottom:0;left:0}
.pos-b-r{position:absolute;bottom:0;right:0}
.switch-onoff::after{content:"开"}
.switch-onoff::before{content:"关"}
.bg-gradual-black{background-image:linear-gradient(45deg,#555,#333);color:#fff}
page{background:#ffffff;}
.cu-form-group input{text-align:right;}
.cu-form-group slider{flex:1;font-size:28rpx;color:#333;padding-right:20rpx;margin:0;}
.cu-custom,.cu-custom .cu-bar{min-height:60px;}
.backimg{background-size:100%;min-height:50px;background-repeat:no-repeat}
.loading{color: #b0b0b0;text-align: center;margin: 20rpx 0;}
.i-logo{
  font-variant:small-caps;
  margin:0 auto;
  padding:0;
  display:inline-flex;
  text-align:center;
  justify-content:center;
  align-items:center;
  white-space:nowrap;
  position:relative;
  width:64rpx;
  height:64rpx;
  background-size:cover;
  background-position:center;
  vertical-align:middle;
  font-size:1.5em;
}
.cu-list.grid>.cu-item text{margin-top:0 !important;}
.cu-bar.fixed .action{margin-left:30rpx;font-size:30rpx;}
.cu-bar.fixed .action>text[class*="icon"]{margin-left:-0.3em;margin-right:0.3em;}
.gif-wave{
  position:absolute;
  width:100%;
  bottom:0;
  left:0;
  mix-blend-mode:screen;
  height:100rpx;
}
.action{z-index: 100;}
.getUserInfo{
  position: fixed;
  left: 0;
  top: 0;
  opacity: 0;
  width: 100%;
  height: 100%;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
  background-color: transparent; 
  z-index: 9999;
}
.getUserInfo::after{
  border: none;
}